{% extends 'base.html.twig' %}

{% block title %}Détails de l'Entreprise
{% endblock %}

{% block body %}


	<h1 class="py-5 text-center">Détails de l'Entreprise
		{{ compagny.name }}</h1>
	<div class="col mb-5 border-2 card text-white bg-dark container p-2 ">
		<div class=" p-4 rounded-4 row justify-content-around">
			<div class="col-6 border p-3">
				<span class="text-muted ">Nom du Responsable :
				</span>
				{{  compagny.leaderName }}
				<br>
				<span class="text-muted">Prénom du Responsable :
				</span>
				{{  compagny.leaderFirstName }}
				<br>
				<span class="text-muted">Téléphone :
				</span>
				{{ compagny.phone }}
				<br>
				<span class="text-muted">Email :
				</span>
				{{ compagny.mail }}
				<br>
				<span class="text-muted">Numéro de Siret :
				</span>
				{{ compagny.siretNumber }}
			</div>
			<div class="col-6 border p-3">
				<span class="text-muted">Adresse :
				</span>
				{{ compagny.address }}
				<br>
				<span class="text-muted">Complément d'adresse :
				</span>
				{{ compagny.additionalAddress }}
				<br>
				<span class="text-muted">Code postal :
				</span>
				{{ compagny.zipCode }}
				<br>
				<span class="text-muted">Ville :
				</span>
				{{ compagny.city }}
			</div>
			<div class="col-12 border p-3">
				<span class="text-muted">Commentaire :
				</span>
				{{ compagny.comment }}
			</div>
		</div>
		<div class=" text-center">
			<a href="{{ path('app_compagny_index') }}" type="button" class="btn btn-sm btn-success">Retour à la liste</a>
			{% if is_granted('ROLE_ADMIN') %}
			<a href="{{ path('app_compagny_edit', {'id': compagny.id}) }}" type="button" class="btn btn-sm btn-primary">Modifier</a>
			{{ include('compagny/_delete_form.html.twig') }}
			{% endif %}
		</div>
	</div>
</div>{% endblock %}
