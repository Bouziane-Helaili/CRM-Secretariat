{% extends 'base.html.twig' %}

{% block title %}CategoryFile index{% endblock %}

{% block body %}
    <h1 class="py-5 text-center">Liste des cat√©gories existantes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_file in category_files %}
            <tr>
                <td>{{ category_file.id }}</td>
                <td>{{ category_file.name }}</td>
                <td>{{ category_file.type }}</td>
                <td>
                    <a href="{{ path('app_category_file_show', {'id': category_file.id}) }}">show</a>
                    <a href="{{ path('app_category_file_edit', {'id': category_file.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_file_new') }}">Create new</a>
{% endblock %}
